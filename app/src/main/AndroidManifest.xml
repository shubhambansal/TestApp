<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bansal.test.mobile">

    <application
        android:name=".ProtoApp"
        android:allowBackup="false"
        android:allowClearUserData="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.reviews.ReviewsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.postreview.PostReviewActivity"
            android:label="@string/menu_action_post_review">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.reviews.ReviewsActivity" />

        </activity>

    </application>

</manifest>